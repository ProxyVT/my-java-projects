import java.util.Scanner;
 
public class Mass {
   
    public static void main(String[] args) {
           
        Scanner in = new Scanner(System.in);
        System.out.print("Please enter mass of the dinosaur in grams: ");
        float a = in.nextInt();
		float grams = a;
		float kilograms = grams * 0.001f;
		float centners = kilograms * 0.01f;
		float tons = centners * 0.1f;
		double kilotons = tons * 0.001f;
        
		System.out.printf("Mass of the dinosaur in grams: %f \n", grams);
        System.out.printf("Mass of the dinosaur in kilograms: %f \n", kilograms);
        System.out.printf("Mass of the dinosaur in centners: %f \n", centners);
        System.out.printf("Mass of the dinosaur in tons: %f \n", tons);
        System.out.printf("Mass of the dinosaur in kilotons: %e \n", kilotons);
		
        in.close();
    }
}
