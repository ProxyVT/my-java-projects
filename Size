import java.util.Scanner;
 
public class Size {
   
    public static void main(String[] args) {
           
        Scanner in = new Scanner(System.in);
        System.out.print("Please enter file size in bytes: ");
        long a = in.nextInt();
		long bytes = a;
		double kilobytes = bytes / 1024;
		double megabytes = kilobytes / 1024;
		double gigabytes = megabytes / 1024;
		double terabytes = gigabytes / 1024;
        
		System.out.printf("File size in bytes: %d \n", bytes);
        System.out.printf("File size in kilobytes: %e \n", kilobytes);
        System.out.printf("File size in megabytes: %e \n", megabytes);
        System.out.printf("File size in gigabytes: %e \n", gigabytes);
        System.out.printf("File size in terabytes: %e \n", terabytes);
		
        in.close();
    }
}
